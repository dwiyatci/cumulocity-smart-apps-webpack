---
parser: babel-eslint
env:
  browser: true
  node: true
  es6: true
extends:
- airbnb
rules:
  no-use-before-define:
  - error
  - functions: false
  no-param-reassign:
  - error
  - props: false
  spaced-comment:
  - error
  - always
  - line:
      exceptions:
      - "/"
  comma-dangle:
  - error
  - arrays: always-multiline
    objects: always-multiline
    imports: always-multiline
    exports: always-multiline
    functions: ignore
